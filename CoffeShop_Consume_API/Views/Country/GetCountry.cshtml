@* GetCountry.cshtml *@
@model IEnumerable<CountryModel>

@if (TempData["Message"] != null)
{
	<div class="alert alert-success">
		@TempData["Message"]
	</div>
}else if (TempData["MessageNotDelete"] != null)
{
	<div class="alert alert-danger">
		@TempData["MessageNotDelete"]
	</div>
}

<h2>Country List</h2>

<div>
	<a class="btn btn-info" asp-controller="Country" asp-action="Edit">Add New Country</a>
</div>

<br />

<table class="table table-responsive border border-primary">
	<tr>
		<th class="border border-primary">Country ID</th>
		<th class="border border-primary">Country Name</th>
		<th class="border border-primary">Country Code</th>
		<th class="border border-primary">Actions</th>
	</tr>

	@foreach (var i in Model)
	{
		<tr>
			<td class="border border-primary">@i.CountryId</td>
			<td class="border border-primary">@i.CountryName</td>
			<td class="border border-primary">@i.CountryCode</td>
			<td class="border border-primary">
				<a href="@Url.Action("Edit","Country",new {CountryId = i.CountryId})" class="btn btn-sm btn-primary">Edit</a>
				<a href="@Url.Action("Delete","Country",new {CountryId = i.CountryId})" class="btn btn-sm btn-danger">Delete</a>
			</td>
		</tr>
	}
</table>
